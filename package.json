{
    "name": "projectname",
    "scripts": {
        "watch": "npx tailwindcss -i ./src/css/tailwind.css -o ./assets/style/main.css --content './site/**/*.php' -w",
        "server": "composer start",
        "dev": "concurrently \"npm run watch\" \"npm run server\"",
        "build": "npx tailwindcss -i ./src/css/tailwind.css -o ./assets/style/main.css --content './site/**/*.php' -m"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "tailwindcss": "^3.4.1"
    }
}
